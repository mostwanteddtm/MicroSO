CODESEG16 SEGMENT USE16
	ASSUME CS:SEGS16,DS:SEGS16
	
	SET_VIDEO_MODE PROC
	
		MOV     AX, 03h
        INT     10h

		MOV		BP, OFFSET TERMINUS	
		MOV		CX, 0FFh			; TOTAL CHARS 255 ASCII
		MOV		DX, 0				; FIRST CHAR 0
		MOV		BH, 16				; 16 BYTES PER CHAR
		XOR		BL, BL				; RAM BLOCK
		MOV		AX, 1100h			; CHANGE FONT TO OUR FONT
		INT		10h					; VIDEO INTERRUPT
		
		RET
		
	SET_VIDEO_MODE ENDP
	
CODESEG16 ENDS